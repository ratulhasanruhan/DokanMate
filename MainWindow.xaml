<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DokanMate"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="DokanMate.MainWindow"
        mc:Ignorable="d"
        Title="DokanMate" Height="600" Width="900" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#FF333333" Grid.Column="0">
            <TextBlock Text="DokanMate" Foreground="White" 
                       FontSize="24" FontWeight="Bold" Margin="20"/>
            <Button Content="Dashboard" Margin="10" Click="Dashboard_Click"/>
            <Button Content="Products" Margin="10" Click="Products_Click"/>
            <Button Content="Sales" Margin="10" Click="Sales_Click"/>
            <Button Content="Settings" Margin="10" Click="Settings_Click"/>
        </StackPanel>

        <!-- Main Content -->
        <Frame x:Name="MainFrame" Grid.Column="1"/>
        <Grid Grid.Column="1" Background="#FFF7F2F2"/>

    </Grid>

</Window>
